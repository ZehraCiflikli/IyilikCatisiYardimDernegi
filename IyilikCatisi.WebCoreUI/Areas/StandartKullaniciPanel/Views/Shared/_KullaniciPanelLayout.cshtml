<style>
    body {
        background-color: #f4f6f9 !important;
    }

    .main-header { /* Sabit üst menü */
        position: fixed !important;
        width: 100%;
        top: 0;
        left: 0;
        z-index: 1030; /* AdminLTE z-index değerlerinden biri */
        margin-left:0 !important;
    }

   
    /* Wrapper için stil */
    .wrapper {
        background-color: #f4f6f9 !important;
        padding-top: 60px; /* Sabit üst menü yüksekliği kadar boşluk */
        display: flex; /* Flexbox kullanarak yan menü ve içeriği yan yana getirme */
        align-items: flex-start; /* Öğeleri üste hizala */
    }

    /* Yan menü için alan ayırma */
    .main-sidebar-container { 
        flex: 0 0 320px; 
        position: fixed; 
        z-index: 500;
    }

    .main-grid{
        display: grid;
        grid-template-columns: 1fr 3fr;
        margin-top:150px !important;
    }
   
</style>


